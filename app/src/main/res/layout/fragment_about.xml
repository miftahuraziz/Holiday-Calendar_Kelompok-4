<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragment.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_developer_dzaky"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:layout_margin="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_dzaky"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:src="@drawable/dzaky"
                android:layout_margin="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="105dp">

                <TextView
                    android:id="@+id/tv_name_dzaky"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Haydar Dzaky B."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/tv_email_dzaky"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="haydar.dzaky@gmail.com"
                    android:padding="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_developer_miftahur"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:layout_margin="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_miftahur"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:src="@drawable/miftahur"
                android:layout_margin="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="105dp">

                <TextView
                    android:id="@+id/tv_name_miftahur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Miftahur Sidq Aziz"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/tv_email_miftahur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="miftahuraziz@gmail.com"
                    android:padding="4dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>